            <Link>TestInputs\MediatrProxyAttribute.cs</Link>
        </Compile>
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="..\..\src\SourceGenerator.MediatR.Proxy\MediatrProxyAttribute.cs">
